<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".glide.LoadActivity">


    <ImageView
        android:id="@+id/iv_load"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_start_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startLoad"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_start_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startGet"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_start_load" />

    <Button
        android:id="@+id/bt_start_load_null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startLoadNull"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_start_get" />

    <Button
        android:id="@+id/bt_start_pre_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startPreLoad"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_start_load_null" />
</androidx.constraintlayout.widget.ConstraintLayout>