<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".db.DbActivity"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:onClick="onClickCreateSQLiteChinadb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="createSQLiteDb-China.db"/>


    <Button
        android:onClick="onClickCreateRoomChinadb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="createRoomDb-China.db"/>


    <Button
        android:onClick="onClickCoverUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="coverUpgradeTest"/>
</LinearLayout>