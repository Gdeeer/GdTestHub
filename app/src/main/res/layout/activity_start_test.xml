<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".context.StartTestActivity">

    <Button
        android:id="@+id/btn_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="normal"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_application1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/btn_application1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="application1"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_application2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_normal" />


    <Button
        android:id="@+id/btn_application2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="application2"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btn_new_thread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_application1" />

    <Button
        android:id="@+id/btn_new_thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_application2" />

</androidx.constraintlayout.widget.ConstraintLayout>