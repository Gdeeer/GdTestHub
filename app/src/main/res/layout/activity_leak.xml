<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leak.LeakActivity">

    <Button
        android:id="@+id/btn_soft_gc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="soft_gc"
        app:layout_constraintBottom_toTopOf="@id/btn_wake_gc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_wake_gc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="wake_gc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_soft_gc" />
</android.support.constraint.ConstraintLayout>